{
  "name": "valercodes/webnorthcodechallenge-plugin",
  "description": "WebNorth Code Challenge Plugin",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "version": "0.1.0",
  "vendor-dir": "vendor",
  "require": {
    "php": ">=8.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "brain/monkey": "^2.6",
    "mockery/mockery": "^1.6",
    "squizlabs/php_codesniffer": "^3.7",
    "wp-coding-standards/wpcs": "^3.0",
    "phpcompatibility/phpcompatibility-wp": "^2.1",
    "mikey179/vfsstream": "^1.6"
  },
  "autoload": {
    "psr-4": {
      "WebNorthCodeChallenge\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "WebNorthCodeChallenge\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "phpcs:config-set": "phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs,vendor/phpcompatibility/phpcompatibility,vendor/phpcompatibility/phpcompatibility-wp",
    "phpcs": "phpcs --standard=phpcs.xml",
    "phpcbf": "phpcbf --standard=phpcs.xml",
    "pot": "wp i18n make-pot . languages/webnorthcodechallenge.pot --exclude=node_modules,vendor,build --allow-root",
    "test": "phpunit --bootstrap tests/bootstrap.php"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
